<section class="list-block">
    <h2 class="text-center" id="guest_earn_header"> VIPs Earn Even More </h2>
    <div class="devider"></div>
    <h5 class="text-center" id="guest_earn_subtitle">The more you spend, the more exclusive perks you unlock!</h5>
    <div class="grid">
        <div class="grid__item one-half block1" style="background-color: {{ block.settings.bg_color_1 }};">
            <div class="content">
                <h3>{{ block.settings.title_1 }}</h3>
                <p class="mark uppercase"> {{ block.settings.sub_title_1 }} </p>
                <div class="list">
                    {{ block.settings.list_1 }}
                </div>
            </div>
        </div>
        <div class="grid__item one-half block2" style="background-color: {{ block.settings.bg_color_2 }};">
            <div class="content">
                <h3>{{ block.settings.title_2 }}</h3>
                <p class="mark uppercase"> {{ block.settings.sub_title_2 }} </p>
                <div class="list">
                    {{- block.settings.list_2 -}}
                </div>
            </div>
        </div>
    </div>
</section>
