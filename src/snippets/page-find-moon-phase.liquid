<section class="find-moon-form {% if item.settings.wide_display %} fluid-display {% endif %}">
    <div class="content">
      {% capture image_layout %}
        <div class="image-with-text__image grid__item one-third medium-down--one-whole moon_phase">
          {% if item.settings.image != blank %}
            {% include 'responsive-image' with
              image: item.settings.image,
              max_width: 630,
              max_height: 400
            %}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
      {% endcapture %}
  
      {% if item.settings.layout == 'left' %}
        {{ image_layout }}
      {% endif %}
  
      <div class="image-with-text__text grid__item two-thirds medium-down--one-whole">
  
        {% if item.settings.devider_enable %}
          <div class="devider center"></div>
        {% endif %} 
  
        {% if item.settings.title != blank %}
          <h3 class="text-center">{{ item.settings.title | escape }}</h3>
        {% endif %}
        
        {% if item.settings.text != blank %}
          {{ item.settings.text }}
        {% endif %}
        <div class="pannel">
          <div class="grid__item three-fifths medium-down--one-whole form-control">
            <svg width="18px" height="21px" viewBox="0 0 18 21" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
              <!-- Generator: sketchtool 51.3 (57544) - http://www.bohemiancoding.com/sketch -->
              <title>calendar</title>
              <desc>Created with sketchtool.</desc>
              <defs></defs>
              <g id="style-guide" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                  <g id="icons" transform="translate(-404.000000, -30.000000)" fill="#2E4676" fill-rule="nonzero">
                      <g id="calender_ico" transform="translate(404.000000, 30.000000)">
                          <path d="M2,5 L2,19 L16,19 L16,5 L2,5 Z M0,3 L18,3 L18,21 L0,21 L0,3 Z" id="Rectangle-14"></path>
                          <path d="M5,3.5 L5,7 L6,6 L4,6 L5,7 L5,3.5 Z M5,3.5 L5,0 L4,1 L6,1 L5,0 L5,3.5 Z M4,0 L6,0 L6,7 L4,7 L4,0 Z" id="Rectangle-5"></path>
                          <path d="M13,3.5 L13,7 L14,6 L12,6 L13,7 L13,3.5 Z M13,3.5 L13,0 L12,1 L14,1 L13,0 L13,3.5 Z M12,0 L14,0 L14,7 L12,7 L12,0 Z" id="Rectangle-5"></path>
                          <polygon id="Line-5" points="0 12 0 10 17 10 17 12"></polygon>
                      </g>
                  </g>
              </g>
          </svg>
            <input type="text" class="moon_date right datepicker" placeholder="MM/DD/YYY">
            
          </div>
          <div class="grid__item two-fifths medium-down--one-whole">
            {% if item.settings.button_label != blank %}
              <button class="button grey left select-moon-product">{{ item.settings.button_label | escape }}</button>
            {% endif %}
          </div>
        </div>
      </div>
  
      {% if item.settings.layout == 'right' %}
        {{ image_layout }}
      {% endif %}
    </div>
</section> 
  

  <style>
    .find-moon-form{
      background-color: {{ item.settings.bg_color }};
    }
    .find-moon-form h3, .find-moon-form p{
        color: {{ item.settings.color }};
      }
  </style>