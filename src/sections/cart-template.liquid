<section class="cart-template">
    {%- include 'bold-cart' -%}
    {% if cart.item_count > 0 %}
        <h1 class="text-center">{{ 'cart.general.title' | t }}</h1>
        <div class="devider"></div>
        <div class="grid cart content">
            <form action="/cart" method="post" novalidate>
                <div class="grid__item product-list two-thirds medium-down--one-whole">
                    <table class="responsive-table">
                        <thead class="small--hide">
                            <tr>
                            <th colspan="2">{{ 'cart.label.product' | t }}</th>
                            <th>{{ 'cart.label.price' | t }}</th>
                            <th>{{ 'cart.label.quantity' | t }}</th>
                            <th>{{ 'cart.label.total' | t }}</th>
                            </tr>
                        </thead>
                        <tbody>
            
                            {% for item in cart.items %}
            
                                {% comment %}
            
                                Cart Item Template
                                =====================
                                The data-label attributes on <td> elements are mobile-friendly
                                helpers used for responsive-table labels
                                {% endcomment %}
            
                                <tr class="responsive-table-row">
            
                                    <td data-label="{{ 'customer.order.product' | t }}">
            
                                    {% if item.image != blank %}
                                        <a href="{{ item.url | within: collections.all }}">
                                        {{ item | img_url: '100x100' | img_tag: item.title }}
                                        </a>
                                    {% endif %}
            
                                    </td>
                                    <td>
                                        <a href="{{ item.url }}">{{ item.product.title }}</a>
            
                                        {% unless item.product.has_only_default_variant %}
                                            <p>{{ item.variant.title }}</p>
                                        {% endunless %}
                                        {%- assign property_size = item.properties | size -%}
            
                                        <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_properties" style="display:none !important;"></span>
                                        {% if property_size > 0 %}
                                            {% for p in item.properties %}
                                            <span>
                                                {%- if p.first.first == '_' -%}{%- continue -%}{%- endif -%}
                                                {% unless p.last == blank %}
                                                    {{ p.first }}:
                                                    {% if p.last contains '/uploads/' %}
                                                        <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                                                    {% else %}
                                                        {{ p.last }}
                                                    {% endif %}
            
                                                {% endunless %}
                                            </span>
                                            {% endfor %}
                                        {% endif %}
            
                                        <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">
                                            <small>{{ 'cart.general.remove' | t }}</small>
                                        </a>
                                    </td>
                                    <td data-label="{{ 'cart.label.price' | t }}">
                                        {% if item.original_line_price != item.line_price %}
                                            <span class="visually-hidden">{{ 'cart.label.discounted_price' | t }}</span>
                                            <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price" data-item-key="{{item.key}}" style="display:none !important;"></span>{{ item.price | money }}
                                            <span class="visually-hidden">{{ 'cart.label.original_price' | t }}</span>
                                            <s><span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price_2" data-item-key="{{item.key}}" style="display:none !important;"></span>{{ item.original_price | money }}</s>
                                        {% else %}
                                            <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price_3" data-item-key="{{item.key}}" style="display:none !important;"></span>{{ item.price | money }}
                                        {% endif %}
                                    </td>
                                    <td data-label="{{ 'cart.label.quantity' | t }}">
                                        <input type="number"
                                            name="updates[]"
                                            id="updates_{{ item.key }}"
                                            value="{{ item.quantity }}"
                                            min="0"
                                            aria-label="{{ 'cart.general.item_quantity' | t }}">
                                    </td>
                                    <td data-label="{{ 'cart.label.total' | t }}">
                                    <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_total" data-item-key="{{item.key}}" style="display:none !important;"></span>{{ item.line_price | money }}
                                    </td>
                                </tr>
            
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="product-item">
                        {% for item in cart.items %}
                        <ul>
                            <li>    
                                <div class="img">
                                    {% if item.image != blank %}
                                        <a href="{{ item.url | within: collections.all }}">
                                        {{ item | img_url: '100x100' | img_tag: item.title }}
                                        </a>
                                    {% endif %}
                                </div>
                                <div class="title">
                                    <a href="{{ item.url }}">{{ item.product.title }}</a>
                
                                    {% unless item.product.has_only_default_variant %}
                                        <p>{{ item.variant.title }}</p>
                                    {% endunless %}
                                    {%- assign property_size = item.properties | size -%}
        
                                    <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_properties" style="display:none !important;"></span>
                                    {% if property_size > 0 %}
                                        {% for p in item.properties %}
                                            {%- if p.first.first == '_' -%}{%- continue -%}{%- endif -%}
                                            {% unless p.last == blank %}
                                                {{ p.first }}:
                                                {% if p.last contains '/uploads/' %}
                                                    <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                                                {% else %}
                                                    {{ p.last }}
                                                {% endif %}
        
                                            {% endunless %}
                                        {% endfor %}
                                    {% endif %}
        
                                    <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">
                                        <small>{{ 'cart.general.remove' | t }}</small>
                                    </a>
                                </div>
                            </li>
                            <li>
                                <div class="header_title">Price : </div>
                                <div class="desc">
                                    {% if item.original_line_price != item.line_price %}
                                        <span class="visually-hidden">{{ 'cart.label.discounted_price' | t }}</span>
                                        <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price" data-item-key="{{item.key}}" style="display:none !important;"></span>{{ item.price | money }}
                                        <span class="visually-hidden">{{ 'cart.label.original_price' | t }}</span>
                                        <s><span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price_2" data-item-key="{{item.key}}" style="display:none !important;"></span>{{ item.original_price | money }}</s>
                                    {% else %}
                                        <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price_3" data-item-key="{{item.key}}" style="display:none !important;"></span>{{ item.price | money }}
                                    {% endif %}
                                </div>
                            </li>
                            <li>
                                <div class="header_title">Quantity : </div>
                                <div class="desc quantity">
                                    
                                    <input type="number"
                                        id="updates_{{ item.key }}"
                                        value="{{ item.quantity }}"
                                        min="0"
                                        aria-label="{{ 'cart.general.item_quantity' | t }}">
                                </div>
                                
                            </li>
                            <li>
                                <div class="header_title">
                                    Total : 
                                </div>
                                <div class="desc">
                                    <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_total" data-item-key="{{item.key}}" style="display:none !important;"></span>{{ item.line_price | money }}
                                </div>
                            </li>
                        </ul>
                        {% endfor %}
                    </div>
                    
                </div>
                <div class="grid__item one-third form-pannel medium-down--one-whole">
                    <div class="info">
                        {% if settings.cart_notes_enable %}
                            <label for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
                            <textarea name="note" rows="5" id="CartSpecialInstructions">{{ cart.note }}</textarea>
                        {% endif %}
                        
                        <p class="left">{{ 'cart.general.subtotal' | t }}</p>
                        <p class="right"><span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_total" style="display:none !important;"></span>{{ cart.total_price | money }}</p>
                        {% if cart.total_discounts > 0 %}
                        <p>{{ 'cart.general.savings' | t }} {{ cart.total_discounts | money }}</p>
                        {% endif %}
                        <p class="sub-title">{{ 'cart.general.shipping_at_checkout' | t }}</p>
                        <input type="submit" name="update" class="button white left update_cart_btn" value="{{ 'cart.general.update' | t }}">
                        <input type="submit" name="checkout" class="button right" value="{{ 'cart.general.checkout' | t }}">
                        <div class="alert-message animated alert-danger bounceIn bounceOut alert-cart">Please select Correct date.</div>
                    </div>
                </div>
            </form>
        </div>
    {% else %}
        <h1 class="text-center">{{ 'cart.general.title' | t }}</h1>
        <div class="devider"></div>
        <div class="content">
            {% comment %}
            Cart empty state
            {% endcomment %}
            <div class="supports-cookies">
                <p>{{ 'cart.general.empty' | t }}</p>
                <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
            </div>

            {% comment %}
            Cart no cookies state
            ---------------------
            Browser cookies are required to use the cart. If cookies aren't enabled in the
            browser a message is displayed prompting the user to enable them.
            {% endcomment %}
            <div class="supports-no-cookies">
                <p>{{ 'cart.general.cookies_required' | t }}</p>
            </div>
        </div>
    {% endif %}
</section>