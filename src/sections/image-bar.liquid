{% assign size_val = 0 %}
{% for block in section.blocks %}
  {% if block.type == 'collection'%}
  {% assign size_val =  size_val | plus: 1 %}
  {% endif %}
{% endfor %}
{%if size_val == 2%}
    {% assign class_name = 'one-half' %}
{% elsif size_val == 3 %}
  {% assign class_name = 'one-third' %}
{% else %}
  {% assign class_name = 'two-eighths' %}
{% endif %}

<section class="image-bar {% if section.settings.wide_display %} fluid-display {% endif %} ">
    <div class="grid">
        <div class="content grid__item one-half grid">
            {% for block in section.blocks %}
                    <div class="image grid__item {{ class_name}}">
                        <div class="info">
                            <div class="img_element__wrap">
                              {% include 'responsive-image' with
                              image: block.settings.image,
                              max_width: 300,
                              max_height: 300,
                              alt: block.settings.title
                              %}
                            </div>
                            <p class="uppercase brand">{{ block.settings.title }}</p>
                            <p class="brand desc"> {{ block.settings.desc }} </p>
                        </div>
                    </div>
            {% endfor %}
        </div>
        <div class="heading grid__item one-half">
            <div class="mark">
                <svg width="64px" height="68px" viewBox="0 0 64 68" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <!-- Generator: sketchtool 51.3 (57544) - http://www.bohemiancoding.com/sketch -->
                    <title>{{ section.settings.heading_title }}</title>
                    <desc>Created with sketchtool.</desc>
                    <defs></defs>
                    <g id="style-guide" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <g id="icons" transform="translate(-222.000000, -92.000000)" fill="#2E4676" fill-rule="nonzero">
                            <g id="big_starts_ico" transform="translate(222.000000, 92.000000)">
                                <path d="M22.1340978,26.4501054 L23.628806,27.9653649 L20.1044815,35.3920687 L5.09063909,37.6609733 L15.957741,48.6774919 L13.4023199,64.1727104 L26.7764129,56.8602865 L40.150506,64.1727104 L37.5950848,48.6774919 L43.3185545,42.8753277 L45.1435594,43.8731681 L39.7341539,49.3569499 L42.7915825,67.8961733 L26.7764129,59.1397135 L10.7612433,67.8961733 L13.8186719,49.3569499 L0.909360911,36.270143 L18.753713,33.5734894 L22.1340978,26.4501054 Z M25.1374346,20.1212633 L26.7764129,16.6674933 L28.1960458,19.6590434 L25.1374346,20.1212633 Z M49.5573036,35.8037597 L52.6434649,36.270143 L50.0652543,38.8838026 L49.5573036,35.8037597 Z" id="Star-2"></path>
                                <path d="M38.3480518,40.1576539 L51.4574031,47.3253275 L48.9525432,32.136695 L59.6054645,21.3373018 L44.8876124,19.1131276 L38.3480518,5.33250671 L31.8084913,19.1131276 L17.0906391,21.3373018 L27.7435605,32.136695 L25.2387005,47.3253275 L38.3480518,40.1576539 Z M38.3480518,42.4370809 L22.597624,51.0487905 L25.6044914,32.8161531 L12.9093609,19.9464715 L30.4577228,17.2945483 L38.3480518,0.66749329 L46.2383808,17.2945483 L63.7867427,19.9464715 L51.0916123,32.8161531 L54.0984797,51.0487905 L38.3480518,42.4370809 Z" id="Star-2"></path>
                            </g>
                        </g>
                    </g>
                </svg>
            </div>
            <h3>{{ section.settings.heading_title }}</p>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Image bar",
        "settings": [
            {
                "type": "checkbox",
                "id": "wide_display",
                "label": "Wide display"
            },
            {
                "type": "text",
                "id": "heading_title",
                "label": "Title",
                "default": "Your headline"
            }
        ],
        "max_blocks": 4,
        "blocks":[
            {
                "type": "collection",
                "name": "Image text",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "text",
                        "id": "desc",
                        "label": "Description"
                    }
                ]
            }
        ],
        "presets": [
            {
                "category": "Image",
                "name":"Image Bar"
            }
        ]
    }
{% endschema %}
