{% if section.settings.show_banner %}
    {% include 'page_banner' %}
{% endif %}
{% for block in section.blocks %}
    {% if block.type == 'image' %}
        {% include 'find-moon-phase', item:block %}
    {% elsif block.type == 'moon_review' %}
        {% include 'moon-review' %}
    {% elsif block.type == 'moon_product' %}
        {% include 'product-per-moon' %}
    {% endif %}
{% endfor %}





{% schema %}
{
    "name": "calculator template",
    "settings": [
        {
            "type": "checkbox",
            "id": "show_banner",
            "label": "Show banner"
        },
        {
            "type": "image_picker",
            "id": "default_banner",
            "label": "Banner Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_banner",
          "label": "Mobile banner image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
    ],
    "blocks": [
        {
            "type": "icon_link",
            "name": "Icon link",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon",
                    "label": "Icon"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                }
            ]
        },
        {
          "type": "moon_product",
          "name": "Moon product",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            }
          ]
        },
        {
          "type": "moon_review",
          "name": "Moon review",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "url",
              "id": "link_url",
              "label": "Button url"
            }
          ]
        },
        {
            "type": "image",
            "name": "Find moon form",
            "settings": [
              {
                "type": "checkbox",
                "id": "wide_display",
                "label": "Wide display"
              },
              {
                "type": "color",
                "id": "bg_color",
                "label": "Background color"
              },
              {
                "type": "color",
                "id": "color",
                "label": "Font color"
              },
              {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
              },
              {
                "type": "checkbox",
                "id": "devider_enable",
                "label": "Devider enable ?"
              },
              {
                "type": "select",
                "id": "layout",
                "label": "Image alignment",
                "default": "left",
                "options": [
                  {
                    "value": "left",
                    "label": "Left"
                  },
                  {
                    "value": "right",
                    "label": "Right"
                  }
                ]
              },
              {
                "type": "text",
                "id": "title",
                "label": "Heading",
                "default": "Image with text"
              },
              {
                "type": "richtext",
                "id": "text",
                "label": "Text",
                "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
              },
              {
                "type": "text",
                "id": "button_label",
                "label": "Button label"
              },
              {
                "type": "url",
                "id": "button_link",
                "label": "Button link"
              }
            ]
        }
    ]
}
{% endschema %}