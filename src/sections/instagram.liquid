{%if item_per_row == 2%}
    {% assign class_name = 'one-half' %}
{% elsif item_per_row == 3 %}
  {% assign class_name = 'one-third' %}
{% else %}
  {% assign class_name = 'two-eighths' %}
{% endif %}

<section class="instagram {% if section.settings.wide_display %} fluid-display {% endif %}">
    <div class="heading">
        <h3 class="text-center">
            {% if section.settings.token != blank %}
                <a href="{{ section.settings.token }}" target="_blank">
            {% endif %}
            {% if page.handle == 'wholesale' %}
                visit our instagram
            {% else %}
                {{ section.settings.title }}
            {% endif %}


            {% if section.settings.token != blank %}
                </a>
            {% endif %}
        </h3>

        {% if section.settings.enable_devider %}
            <div class="devider"></div>
        {% endif %}
    </div>
</section>
<script rel="dns-prefetch" src="{{'fs.embed.v2.5.js' | asset_url}}" data-feed-id="moonglow" data-theme="showcase_v2_5" data-page-size="8" async></script>

{% schema %}
    {
        "name": "Instagram",
        "settings": [
            {
                "type": "checkbox",
                "id": "wide_display",
                "label": "Wide display"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Heading title",
                "default": "Your Headline"
            },
            {
                "type": "checkbox",
                "id": "enable_devider",
                "label": "Enable baseline ?"
            },
            {
                "type": "text",
                "id": "token",
                "label": "Instagram Access Token"
            },
            {
                "type": "range",
                "id": "item_per_row",
                "label": "Item per row",
                "min": 2,
                "max": 4,
                "step": 1,
                "default": 4
            },
            {
                "type": "range",
                "id": "instagram_count",
                "label": "Number of image",
                "min": 1,
                "max": 16,
                "step": 1,
                "default": 12
            }
        ],
        "presets": [
            {
                "category": "Social",
                "name":"Instagram"
            }
        ]
    }
{% endschema %}
